# https://github.com/sindresorhus/editorconfig-sublime
root = true

[*]
end_of_line = lf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.py]
indent_style = space

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
